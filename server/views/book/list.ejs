<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
<main class="container" style="background-color: #e3f2fd;">
    <div class="jumbotron" style="background-color: #e3f2fd;">    
        <div class="row">        
            <div class="offset-md-1 col-md-11">
                <h2><%= title %></h2>
                
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <th class="text-center col-4">Contact Name</th>
                            <th class="text-center col-3">Contact Number</th>
                            <th class="text-center col-3">Email</th>                        
                            <th class="text-center col-1"></th>
                            <th class="text-center col-1"></th>
                        <% } else { %>
                            <a href="/login">
                            <input type="button" class="btn btn-success" value="Login">
                        </a>                                               
                        <% } %>
                    </tr>

                    <!-- Repeatable Template Row -->

                    <% for(let count = 0; count < BookList.length; count++) { %>
                        <tr class="d-flex">
                            <% if(typeof displayName == 'string' && displayName) { %>
                                <td class="text-center col-4"><%= BookList[count].cname %></td>
                                <td class="text-center col-3"><%= BookList[count].cnumber %></td>
                                <td class="text-center col-3"><%= BookList[count].email %></td>                                        
                                <td class="text-center col-1">
                                    <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Update</a>
                                </td>
                                <td class="text-center col-1">
                                    <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                                </td>                                
                            <% } %>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>
</main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
